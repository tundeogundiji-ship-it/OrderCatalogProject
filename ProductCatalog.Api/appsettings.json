{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=SOLDEV56\\SQLEXPRESS;Initial Catalog=ProductCatalog;Integrated Security=True;Encrypt=True;Trust Server Certificate=True"
  },
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\Logs\\ProductCatalog\\log.txt",
          "outputTemplate": "{Timestamp:G} {Message}{NewLine:1}{Exception:1}",
          "rollingInterval": "Day",
          "fileSizeLimitBytes": 20485760, // 20 MB
          "rollOnFileSizeLimit": true
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
